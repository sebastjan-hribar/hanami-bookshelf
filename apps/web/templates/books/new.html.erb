<h2>Add book</h2>

<%=
  form_for :book, '/books' do
    div class: 'input' do
      label      :title
      text_field :title
    end

    div class: 'input' do
      label      :author
      select :author, authors, options: {prompt: 'Select an author'}
    end

    div class: 'controls' do
      submit 'Create Book'
    end
  end
%>
